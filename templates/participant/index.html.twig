{% extends 'base.html.twig' %}

{% block title %}Participants | {{ parent() }}{% endblock %}

{% block body %}

    <h1>Liste des participants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Mail</th>
                <th>Administrateur</th>
                <th>Actif</th>
                <th>Pseudo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.mail }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}">Afficher</a>
                    {#<a href="{{ path('participant_edit', {'id': participant.id}) }}">Désactivé</a>
                    <a href="{{ path('participant_delete', {'id': participant.id}) }}">Supprimer</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
