{% extends 'base.html.twig' %}

{% block title %}Annulation | {{ parent() }}{% endblock %}

{% block body %}
    <br>
    <h1>Annuler une sortie</h1>
    <hr>
    <table class="table">
    <tbody>
        <tr>
            <th>Nom de la sortie : </th>
            <td>{{ sortie.nom }}</td>
        </tr>

        <tr>
            <th>Date de la sortie : </th>
            <td>{{ sortie.dateHeureDebut | date("D d/m/Y Ã  G:i")}}</td>
        </tr>

        <tr>
            <th>Campus : </th>
            <td>{{ sortie.campus.nom }}</td>
        </tr>

        <tr>
            <th>Lieu : </th>
            <td>{{ sortie.lieu.nom }}, {{ sortie.lieu.rue }}, {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}</td>
        </tr>

    </tbody>
    </table>
    {{ form(form) }}
    <a href="{{ path('sortie_show', {'id': sortie.id})  }}" class="btn btn-secondary">Retour</a>
{% endblock %}