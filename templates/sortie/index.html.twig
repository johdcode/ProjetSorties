{% extends 'base.html.twig' %}

{% block title %}Liste sorties | {{ parent() }}{% endblock %}

{% block body %}
    <br>
    <h1>Liste sorties</h1>
    <hr>
    <div class="div-form">
        {{ form_start(sortieForm) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(sortieForm) }}
        </div>
        <br>
        <h1>Filtrer les sorties</h1>
        <hr>
        <br>
        <br>

    {#        {{ form_start(sortieForm) }}#}
        <div class="my-custom-class-for-errors">
            {{ form_errors(sortieForm) }}
        </div>
        {{ form_end(sortieForm) }}
    </div>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date et heure de début</th>
                <th>Durée</th>
                <th>Date limite d'inscription</th>
                <th>Participants max.</th>
                <th>Informations</th>
                <th>Organisateur</th>
                <th>État</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                {# TODO mettre la date en fr, filtre:   format_datetime('full', 'full', locale='fr') #}
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('l d/m/Y à G:i') : '' }}</td>
                <td>{{ sortie.duree }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('l d/m/Y à G:i') : '' }}</td>
                <td>{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.infosSortie }}</td>
                <td>{{ sortie.organisateur.pseudo }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>
                    <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    {% if app.user and app.user.id == sortie.organisateur.id%}
                        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                        <a href="{{ path('sortie_new', {'id': sortie.id}) }}">Publier</a>
                        {% if 'Créée' == sortie.etat.libelle or 'Ouverte' == sortie.etat.libelle %}
                            <a href="{{ path('sortie_annuler', {'id': sortie.id}) }}">Annuler</a>
                        {% endif %}
                    {% endif %}

                    <a href="{{ path('sortie_inscrire', {'id': sortie.id}) }}">S'inscrire</a>
                    <a href="{{ path('sortie_desinscrire', {'id': sortie.id}) }}">Se Désister</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}